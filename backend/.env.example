# Application settings
APP_NAME=DeenTales API
VERSION=1.0.0
DEBUG=True

# Security
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Add your frontend URLs
ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Database
DATABASE_URL=sqlite:///./deentales.db
# For PostgreSQL: postgresql://user:password@localhost/dbname
# For MongoDB: mongodb://localhost:27017/deentales

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Image Generation
IMAGE_GENERATION_SERVICE=openai
STABILITY_API_KEY=your-stability-api-key-here

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_FOLDER=./uploads
